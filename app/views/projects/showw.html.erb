<div class="main-container">

  <div class="container-projects">
    <div class= "content-center">
      <div class="container-estimate-text">
        <h3><%= @project.name.upcase %></h3>
      </div>
    </div>
    <% if @project.pictures.present? %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" id="slide-color"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1" id="slide-color"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2" id="slide-color"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3" id="slide-color"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="4" id="slide-color"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="5" id="slide-color"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= cl_image_tag @project.pictures[0].photo, alt: "Picture", class: "d-block w-100", height: 15, width: 20, crop: :lfill%>
          </div>
          <%  @project.pictures.each do |pic| %>
            <div class="carousel-item">
              <%= cl_image_tag pic.photo, alt: "Picture", class: "d-block w-100", height: 300, width: 400, crop: :lfill%>
            </div>
          <% end %>
        </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
      </div>
    <% end %>
    <div class="category-card">
      <div class="card-search_search">
        <div class="project-details">
          <div id="edit-btn">
            <i class="far fa-edit"></i>
          </div>
          <div id="delete-btn">
            <i class="far fa-trash-alt"></i>
          </div>
          <div class="pictos-details">
            <div class="pictos-details-align">
              <%= image_tag ("address.png") %>
              <p><%=@project.street_and_nr%></p>
            </div>
            <div class="pictos-details-align">
              <%= image_tag ("category.png") %>
              <p><%=@project.category%></p>
            </div>
            <div class="pictos-details-align">
              <%= image_tag ("surface.png") %>
              <p><%=@project.surface%> m2</p>
            </div>
            <div class="pictos-details-align">
              <%= image_tag ("bedroom.png") %>
              <p><%=@project.nr_of_bedrooms%></p>
            </div>
            <div class="pictos-details-align">
              <%= image_tag ("bathroom.png") %>
              <p><%=@project.nr_of_bathrooms%></p>
            </div>
            <div class="pictos-details-align">
              <%= image_tag ("estimate.png") %>
              <p><%= @detailed_estimate %>â‚¬</p>
            </div>
          </div>
        </div>
      </div>
      <div class="card-search_search">
        <h5>Details of your search</h5>
        <p><strong>Type of asset:</strong><%= @project.category %></p>
        <p><strong>Address:</strong> <%= @project.zipcode%></p>
        <p><strong>Surface:</strong> <%= @project.surface%> sqm</p>
        <p><strong>Nr. of bedrooms:</strong> <%= @project.nr_of_bedrooms %></p>
        <p><strong>Nr. of bathrooms:</strong> <%= @project.nr_of_bathrooms%></p>
        <p><strong>state of asset:</strong> <%= @project.state%></p>
        <p><strong>garage:</strong> <%= @project.garage%></p>
        <h4>Asset Value</h4>
        <p><strong><%= @simple_estimate %> â‚¬ </strong></p>
        <h4>Asset Registration Fees </h4>
        <p><strong><%= (@simple_estimate * 0.15).to_i  %>â‚¬</strong></p>
         <h4>Total price with registration fee</h4>
          <p><strong><%= ((@simple_estimate * 0.15) + @simple_estimate).to_i %> â‚¬ </strong></p>
        <h4>Renovation to be done</h4>
        <p><strong><%= "Heating Coast: #{@renovation_details.heating_price} â‚¬" if @project.heating %></strong> </p>
        <p><strong><%= "Kitchen Coast: 7000â‚¬" if @project.kitchen %></strong></p>
        <p><strong><%= "Sanitation Coast: #{@renovation_details.sanitation_price} " if @project.sanitation %> â‚¬ </strong> </p>
        <p><strong><%= "Electricity Coast: #{@renovation_details.electricity_price} " if @project.electricity %> â‚¬</strong> </p>
        <h4>Total Renovation Coast</h4>
        <p> <strong><%= @renovation_details.total_price  %> â‚¬ </strong></p>
            <%= link_to 'Download your estimate on PDF format', project_path(@project, format: :pdf) %>
      </div>
    </div>
  </div>
  <div
    id="map"
    style="width: 40%;
    height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

