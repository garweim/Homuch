<div class="main-container">
  <div class="container-projects">
    <h3>My estimates</h3>
    <% @projects.each do |project| %>
      <%= link_to project_path(project), :action => 'go' do %>
        <div class="project-card">
          <div class="project-img" <% if project.pictures.present? %>
            style="background-image: url(
            '<%= cl_image_path project.pictures.first.photo, height: 300, width: 400, crop: :fill %>')"
          <% else %>
            style="background-image: url(https://images.unsplash.com/photo-1475855581690-80accde3ae2b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)"
          <% end %>
          >
          </div>
            <div class="project-details">
              <div id="edit-btn">
                <%= link_to edit_project_path(project) do  %>
                  <i class="far fa-edit"></i>
                <% end %>
              </div>
              <div id="delete-btn">
               <!--  <i class="far fa-trash-alt"></i> -->
               <%= link_to project_path(project), method: :delete do  %>
               <i class="fas fa-trash-alt"></i>
               <% end %>
              </div>
              <h4><%= project.name %></h4>
              <p><%= project.street_and_nr %></p>
              <div class="pictos-details">
                <div class="pictos-details-align">
                  <%= image_tag ("category.png") %>
                  <p><%=project.category%></p>
                </div>
                <div class="pictos-details-align">
                  <%= image_tag ("surface.png") %>
                  <p><%=project.surface%> m2</p>
                </div>
                <div class="pictos-details-align">
                  <%= image_tag ("bedroom.png") %>
                  <p><%=project.nr_of_bedrooms%></p>
                </div>
                <div class="pictos-details-align">
                  <%= image_tag ("bathroom.png") %>
                  <p><%=project.nr_of_bathrooms%></p>
                </div>
                <div class="pictos-details-align">
                  <%= image_tag ("estimate.png") %>
                  <p><%= project.estimates.last&.market_price %>â‚¬</p>
                </div>
              </div>
            </div>
        </div>
        <% end %>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 40%;
    height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>








